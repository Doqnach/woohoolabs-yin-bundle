<?xml version="1.0" encoding="UTF-8" ?>

<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="qpautrat_woohoolabs_yin.psr7_factory.class">Symfony\Bridge\PsrHttpMessage\Factory\DiactorosFactory</parameter>
        <parameter key="qpautrat_woohoolabs_yin.json_api.class">WoohooLabs\Yin\JsonApi\JsonApi</parameter>
        <parameter key="qpautrat_woohoolabs_yin.json_api.factory.class">QPautrat\WoohoolabsYinBundle\Factory\JsonApiFactory</parameter>
    </parameters>
    <services>
        <service id="qpautrat_woohoolabs_yin.psr7_factory" class="%qpautrat_woohoolabs_yin.psr7_factory.class%" public="false"/>
        <service id="qpautrat_woohoolabs_yin.json_api.factory" class="%qpautrat_woohoolabs_yin.json_api.factory.class%" public="false">
            <argument type="service" id="qpautrat_woohoolabs_yin.psr7_factory"/>
        </service>
        <service id="qpautrat_woohoolabs_yin.json_api" class="%qpautrat_woohoolabs_yin.json_api.class%">
            <factory service="qpautrat_woohoolabs_yin.json_api.factory" method="create" />
            <argument type="expression">service('request_stack').getCurrentRequest()</argument>
        </service>
    </services>
</container>